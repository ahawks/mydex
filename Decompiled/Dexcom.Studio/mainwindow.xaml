<Window x:Class="Dexcom.Tools.DataManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dexclient="clr-namespace:Dexcom.Client.Common;assembly=Dexcom.Client.Common"
        xmlns:local="clr-namespace:Dexcom.Tools.DataManager"
        x:Name="thisWindow" Title="Dexcom Studio" Height="Auto" Width="Auto" MinWidth="980" MinHeight="740"
        SizeToContent="Manual" WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Icon="/Dexcom.Studio;component/App.ico" Background="{DynamicResource LightBrush}" FontSize="12">
  <UIElement.InputBindings>
  </UIElement.InputBindings>
  <UIElement.CommandBindings>
    <CommandBinding Executed="CommandBinding_Executed" CanExecute="CommandBinding_CanExecute"
                    Command="{x:Static ApplicationCommands.Close}"/>
    <CommandBinding Executed="CommandBinding_Executed" CanExecute="CommandBinding_CanExecute"
                    Command="{x:Static local:MainWindow.QuickPrintCommand}"/>
  </UIElement.CommandBindings>
  <FrameworkElement.Resources>
    <dexclient:DateTimeOffsetConverter x:Key="DateTimeOffsetConverter"/>
    <dexclient:DateTimeConverter x:Key="DateTimeConverter"/>
    <dexclient:ImageSourceConverter x:Key="ImageSourceConverter"/>
    <dexclient:RelativeFontSizeConverter x:Key="RelativeFontSizeConverter"/>
    <dexclient:ResourceDictionaryConverter x:Key="ResourceDictionaryConverter"/>
    <local:PatientDisplayConverter x:Key="PatientDisplayConverter"/>
    <local:PatientGenderConverter x:Key="PatientGenderConverter"/>
    <Style x:Key="ScrollViewerStyle1" TargetType="{x:Type ScrollViewer}">
      <Setter Property="Control.Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ScrollViewer}">
            <Grid Background="{TemplateBinding Control.Background}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              <ScrollContentPresenter Margin="{TemplateBinding Control.Padding}" Content="{TemplateBinding ContentControl.Content}"
                                      ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}" Grid.Column="1" Grid.Row="0"
                                      CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}" CanHorizontallyScroll="false"
                                      CanVerticallyScroll="false"/>
              <ScrollBar x:Name="PART_HorizontalScrollBar"
                         Visibility="{TemplateBinding ScrollViewer.ComputedHorizontalScrollBarVisibility}" Grid.Column="1"
                         Grid.Row="1" Orientation="Horizontal" ViewportSize="{TemplateBinding ScrollViewer.ViewportWidth}"
                         Maximum="{TemplateBinding ScrollViewer.ScrollableWidth}" Minimum="0"
                         AutomationProperties.AutomationId="HorizontalScrollBar"
                         Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>
              <ScrollBar x:Name="PART_VerticalScrollBar"
                         Visibility="{TemplateBinding ScrollViewer.ComputedVerticalScrollBarVisibility}" Grid.Column="0"
                         Grid.Row="0" Orientation="Vertical" ViewportSize="{TemplateBinding ScrollViewer.ViewportHeight}"
                         Maximum="{TemplateBinding ScrollViewer.ScrollableHeight}" Minimum="0"
                         AutomationProperties.AutomationId="VerticalScrollBar"
                         Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <DataTemplate x:Key="StatsHeaderTemplate">
      <TextBlock TextWrapping="WrapWithOverflow" Padding="4,2" Text="{Binding}"/>
    </DataTemplate>
  </FrameworkElement.Resources>
  <DockPanel>
    <DockPanel Dock="Top" Background="{DynamicResource LightBrush}">
      <Menu DockPanel.Dock="Left" Margin="0,0,0,2" Height="Auto"
            FontSize="{Binding ElementName=thisWindow, Path=FontSize}">
        <MenuItem VerticalAlignment="Bottom"
                  Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuFile, FallbackValue=File}">
          <MenuItem Name="m_ctrlQuickPrintLauncher" Command="{x:Static local:MainWindow.QuickPrintCommand}"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuFile_QuickPrint}"/>
          <Separator/>
          <MenuItem Click="DoHandleClick_ExitApplication"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuFile_Exit}"/>
        </MenuItem>
        <MenuItem VerticalAlignment="Bottom"
                  Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools, FallbackValue=Tools}">
          <MenuItem Click="m_ctrlResetReceiver_Click" Name="m_ctrlResetReceiver"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_ResetReceiverDatabase}"/>
          <MenuItem Click="m_ctrlActivateClinicalFeatures_Click" Name="m_ctrlActivateClinicalFeatures"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_ActivateClinicalFeatures}"/>
          <MenuItem Click="m_ctrlBlindTool_Click" Name="m_ctrlBlindTool"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_BlindUnblindReceiver}"/>
          <MenuItem Click="m_ctrlShowHideBlindedData_Click" Name="m_ctrlShowHideBlindedData" IsCheckable="true"
                    IsChecked="true"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_DisplayBlindedData, FallbackValue='_Display Blinded Data'}"/>
          <MenuItem Click="m_ctrlUpgradeDM3Database_Click" Name="m_ctrlUpgradeDM3Database"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_ImportDM3PatientDatabase, FallbackValue='Import Dexcom DM3 Patient Database'}"/>
          <MenuItem Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_DriversForDexcomReceivers, FallbackValue='Drivers for Dexcom Receivers'}">
            <MenuItem Click="m_ctrlCheckR2Driver_Click" Name="m_ctrlCheckR2Driver"
                      Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_CheckR2Driver, FallbackValue='Install the Dexcom SEVEN® PLUS Driver'}"/>
            <MenuItem Click="m_ctrlCheckG4Driver_Click" Name="m_ctrlCheckG4Driver"
                      Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuTools_CheckG4Driver, FallbackValue='Install the Dexcom Color™ Driver'}"/>
          </MenuItem>
        </MenuItem>
        <MenuItem VerticalAlignment="Bottom"
                  Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuHelp, FallbackValue=Help}">
          <MenuItem Click="m_ctrlHelpAbout_Click" Name="m_ctrlHelpAbout"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuHelp_About}"/>
          <MenuItem Click="m_ctrlOnlineHelp_Click" Name="m_ctrlOnlineHelp"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuHelp_OnlineHelp}"/>
          <MenuItem Click="m_ctrlShowLicenseAgreement_Click" Name="m_ctrlShowLicenseAgreement"
                    Header="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_MenuHelp_SoftwareLicenseAgreement}"/>
        </MenuItem>
      </Menu>
      <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right"
                  Background="{DynamicResource LightBrush}">
        <Button Click="m_ctrlNighttimeRange_Click" Name="m_ctrlNighttimeRange" Height="Auto" Margin="0,1,4,1"
                Padding="6,3" Background="{DynamicResource LightBrush}" VerticalAlignment="Center" IsEnabled="true"
                Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_NighttimeRange, FallbackValue='Nighttime Range'}"/>
        <Button Click="m_ctrlGlucoseRangeFilter_Click" Name="m_ctrlGlucoseRangeFilter" Height="Auto"
                Margin="0,1,4,1" Padding="6,3" Background="{DynamicResource LightBrush}" VerticalAlignment="Center"
                IsEnabled="true"
                Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_GlucoseRangeFilter, FallbackValue='Glucose Range Filter'}"/>
        <Button Click="m_ctrlTimesOfTheDayFilter_Click" Name="m_ctrlTimesOfTheDayFilter" Height="Auto"
                Margin="0,1,4,1" Padding="6,3" Background="{DynamicResource LightBrush}" VerticalAlignment="Center"
                IsEnabled="false"
                Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=Common_TimesOfTheDay, FallbackValue='Times of the Day'}"/>
        <Button Click="m_ctrlDaysOfTheWeekFilter_Click" Name="m_ctrlDaysOfTheWeekFilter" Height="Auto"
                Margin="0,1,4,1" Padding="6,3" Background="{DynamicResource LightBrush}" VerticalAlignment="Center"
                IsEnabled="false"
                Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=Common_DaysOfTheWeek, FallbackValue='Days of the Week'}"/>
        <Button Click="m_ctrlTargetGlucoseRange_Click" Name="m_ctrlTargetGlucoseRange" Height="Auto"
                Margin="0,1,4,1" Padding="6,3" Background="{DynamicResource LightBrush}" VerticalAlignment="Center"
                Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=Common_TargetGlucoseRange, FallbackValue='Target Range'}"/>
        <ComboBox SelectionChanged="m_ctrlMainSelectedPatient_SelectionChanged" Name="m_ctrlMainSelectedPatient"
                  MinWidth="200" MaxWidth="400" Height="Auto" Margin="0,1,2,1" DisplayMemberPath="SystemDisplayName"
                  VerticalAlignment="Center" MaxDropDownHeight="700"/>
        <Border Name="m_ctrlMainSelectedPatientIndicator" Width="25" BorderBrush="Crimson" BorderThickness="3"
                Margin="-25,0,0,0" Visibility="Hidden"/>
      </StackPanel>
    </DockPanel>
    <StatusBar Name="m_ctrlStatusBar" DockPanel.Dock="Bottom" VerticalAlignment="Bottom"
               HorizontalAlignment="Stretch" Padding="2">
      <StatusBarItem HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal">
          <Button Click="m_ctrlCancelStatusItem_Click" Name="m_ctrlCancelStatusItem" Padding="6,1" Height="Auto"
                  Margin="2,0" Background="{DynamicResource LightBrush}" Visibility="Visible"
                  Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=Common_Cancel, FallbackValue=Cancel}"
                  FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
          <ProgressBar Name="m_ctrlStatusItemProgress" Width="60" Margin="2,0" Visibility="Visible"
                       FontSize="{Binding ElementName=thisWindow, Path=FontSize}" Style="{x:Null}"/>
          <Label Name="m_ctrlStatusMessage" Content="Ready..." VerticalAlignment="Center"
                 VerticalContentAlignment="Center" FontSize="{Binding ElementName=thisWindow, Path=FontSize}"/>
        </StackPanel>
      </StatusBarItem>
      <StatusBarItem HorizontalAlignment="Right" MinWidth="200" HorizontalContentAlignment="Right">
        <Label Name="m_ctrlReceiverMessage" Content="No receiver attached." Margin="0,0,10,0"
               FontSize="{Binding ElementName=thisWindow, Path=FontSize}"/>
      </StatusBarItem>
    </StatusBar>
    <Grid>
      <TabControl SelectionChanged="m_ctrlMainTabs_SelectionChanged" Name="m_ctrlMainTabs" Height="Auto" Width="Auto"
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="0,0,0,0" Background="LightGray" TabStripPlacement="Top" SelectedIndex="0">
        <TabItem Name="m_ctrlHomeTab" Height="Auto" VerticalAlignment="Stretch">
          <HeaderedContentControl.Header>
            <StackPanel Orientation="Vertical">
              <Image Name="m_ctrlHomeTabImage" Margin="0,2,0,0" Stretch="Uniform" Width="71"
                     Source="/Dexcom.Studio;component/Resources/Dexcom-Registered.gif" HorizontalAlignment="Center"
                     Height="30" VerticalAlignment="Center"/>
              <TextBlock Name="m_ctrlHomeTabText" Margin="0,2" VerticalAlignment="Center" HorizontalAlignment="Center"
                         Text="Home"/>
            </StackPanel>
          </HeaderedContentControl.Header>
          <Grid>
            <Image Stretch="Uniform" Width="600" Source="/Dexcom.Studio;component/Resources/Dexcom-Registered.gif"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Border Name="m_ctrlWebPortalBorder" Margin="10,10,10,40" BorderThickness="4" Background="White"
                    BorderBrush="{DynamicResource HoverBrush}" Padding="2" CornerRadius="8" HorizontalAlignment="Left">
              <WebBrowser Name="m_ctrlWebPortalBrowser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0"
                          Visibility="Hidden"/>
            </Border>
            <WindowsFormsHost Name="m_ctrlProxyWinFormsHost" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="1"
                              Height="1" Margin="0" Background="LightGray"/>
            <Label VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
              <Hyperlink Click="m_ctrlHomeTabHyperlink_Click" x:Name="m_ctrlHomeTabHyperlink">www.dexcom.com</Hyperlink>
            </Label>
          </Grid>
        </TabItem>
        <TabItem Name="m_ctrlPatternTab" Height="Auto" VerticalAlignment="Stretch" Visibility="Visible">
          <HeaderedContentControl.Header>
            <StackPanel Orientation="Vertical">
              <Image Name="m_ctrlPatternTabImage" Margin="0,2,0,0" Stretch="Uniform" Width="71"
                     Source="/Dexcom.Studio;component/Resources/patterns.png" HorizontalAlignment="Center" Height="30"
                     VerticalAlignment="Center">
                <UIElement.BitmapEffect>
                  <DropShadowBitmapEffect Opacity="0.5" ShadowDepth="3"/>
                </UIElement.BitmapEffect>
              </Image>
              <TextBlock Name="m_ctrlPatternTabText" Margin="0,2" VerticalAlignment="Center" HorizontalAlignment="Center"
                         Text="Patterns"/>
            </StackPanel>
          </HeaderedContentControl.Header>
          <DockPanel Margin="-5,-5,-5,-5">
            <Border BorderThickness="1" BorderBrush="{DynamicResource NormalBorderBrush}" CornerRadius="2,2,0,0"
                    DockPanel.Dock="Top">
              <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel>
                  <DockPanel VerticalAlignment="Top">
                    <StackPanel Name="PrintButtonsPanelPattern" DockPanel.Dock="Right" Margin="4">
                      <Button Click="m_ctrlPatternPrintReport_Click" Name="m_ctrlPatternPrintReport" Padding="6,3" Height="Auto"
                              VerticalAlignment="Top" Margin="2" Background="{DynamicResource LightBrush}"
                              Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_PrintReport, FallbackValue='Print Report'}"/>
                      <Button Click="m_ctrlPatternViewReport_Click" Name="m_ctrlPatternViewReport" Padding="6,3" Height="Auto"
                              VerticalAlignment="Top" Margin="2" Background="{DynamicResource LightBrush}"
                              Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_ViewReport, FallbackValue='View Report'}"/>
                    </StackPanel>
                    <TextBox Name="m_ctrlPatternDisplayedSettings" IsReadOnly="true" Text="" TextWrapping="Wrap" Margin="4,2"
                             MinHeight="24" Height="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0"
                             BorderBrush="Transparent" Foreground="DarkSlateGray"
                             MaxHeight="{Binding ElementName=PrintButtonsPanelPattern, Path=ActualHeight}"
                             FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
                  </DockPanel>
                  <DockPanel Margin="2,0,2,2">
                    <ComboBox SelectionChanged="m_ctrlPatternViewSize_SelectionChanged" Name="m_ctrlPatternViewSize"
                              MinHeight="23" HorizontalAlignment="Left" Margin="0,0,2,0" VerticalAlignment="Top" MinWidth="44"
                              IsSynchronizedWithCurrentItem="True" MaxDropDownHeight="600" ItemsSource="{Binding}"
                              ToolTip="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=CommonToolTip_NumDaysToView}"/>
                    <ScrollBar Scroll="m_ctrlPatternDaysRangeSlider_Scroll" Name="m_ctrlPatternDaysRangeSlider" Margin="2,0,0,0"
                               Orientation="Horizontal" MinHeight="25" VerticalAlignment="Center" ViewportSize="10" Minimum="0"
                               Maximum="100" SmallChange="1" LargeChange="3" Style="{DynamicResource ScrollBarStyle1}"
                               Focusable="true"/>
                  </DockPanel>
                </StackPanel>
                <Popup Name="m_ctrlPatternPopupDate" AllowsTransparency="true" Height="Auto" VerticalAlignment="Top"
                       Placement="Top" SnapsToDevicePixels="true">
                  <Border CornerRadius="2" BorderThickness="1" BorderBrush="DarkGray" Background="LightGray">
                    <TextBlock x:Name="m_ctrlPatternPopupDateText" Text="" Padding="6,2"/>
                  </Border>
                </Popup>
              </Grid>
            </Border>
            <ScrollViewer DockPanel.Dock="Right" VerticalScrollBarVisibility="Auto">
              <Grid DockPanel.Dock="Right" VerticalAlignment="Stretch" Margin="2" UseLayoutRounding="true"
                    Background="WhiteSmoke">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border MouseLeave="m_ctrlPatternWorst_MouseLeave" Grid.Row="0" BorderThickness="3" BorderBrush="DarkGray"
                        CornerRadius="8" Padding="2" Margin="2"
                        Background="{Binding ElementName=m_ctrlHourlyStatsDataGrid, Path=Background}">
                  <DockPanel Grid.Row="1">
                    <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontWeight="SemiBold"
                           Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=PatternReport_PatternInsightsSummary, FallbackValue='Pattern Insights Summary'}"
                           FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=+10%}"/>
                    <Separator DockPanel.Dock="Top"/>
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                      </Grid.RowDefinitions>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="150" Width="{Binding ElementName=m_ctrlFakeInsightsSummaryText, Path=ActualWidth}"/>
                        <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>
                      <TextBlock Name="m_ctrlPatternNighttimeLowsLabel" Grid.Row="0" Text="Nighttime
Lows"
                                 HorizontalAlignment="Center" TextAlignment="Center" Foreground="#FFAF0000" FontWeight="SemiBold"/>
                      <TextBlock Name="m_ctrlPatternNighttimeLowsWorst" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                 Text="Most significant pattern of lows found between 1:00 AM and 2:15 AM"
                                 HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-5%}"/>
                      <TextBlock Name="m_ctrlPatternNighttimeLowsCount" Grid.Row="1" Text="(1 Found)" HorizontalAlignment="Center"
                                 VerticalAlignment="Top" TextAlignment="Center" Foreground="Black"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
                      <TextBlock MouseEnter="m_ctrlPatternNighttimeLowsWorst_MouseEnter" Grid.Row="0" Grid.RowSpan="2"
                                 Grid.ColumnSpan="4"/>
                      <Separator Grid.Row="2" Grid.ColumnSpan="4"/>
                      <TextBlock Name="m_ctrlPatternDaytimeLowsLabel" Grid.Row="3" Text="Daytime
Lows" HorizontalAlignment="Center"
                                 TextAlignment="Center" Foreground="#FFAF0000" FontWeight="SemiBold"/>
                      <TextBlock Name="m_ctrlPatternDaytimeLowsWorst" Grid.Row="3" Grid.Column="2" Grid.RowSpan="2"
                                 Text="Most significant pattern of highs found between 10:45 PM and 12:15 AM"
                                 HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-5%}"/>
                      <TextBlock Name="m_ctrlPatternDaytimeLowsCount" Grid.Row="4" Text="(2 Found)" HorizontalAlignment="Center"
                                 VerticalAlignment="Top" TextAlignment="Center" Foreground="Black"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
                      <TextBlock MouseEnter="m_ctrlPatternDaytimeLowsWorst_MouseEnter" Grid.Row="3" Grid.RowSpan="2"
                                 Grid.ColumnSpan="4"/>
                      <Separator Grid.Row="5" Grid.ColumnSpan="4"/>
                      <TextBlock Name="m_ctrlPatternNighttimeHighsLabel" Grid.Row="6" Text="Nighttime
Highs"
                                 HorizontalAlignment="Center" TextAlignment="Center" Foreground="DarkGoldenrod"
                                 FontWeight="SemiBold"/>
                      <TextBlock Name="m_ctrlPatternNighttimeHighsWorst" Grid.Row="6" Grid.Column="2" Grid.RowSpan="2"
                                 Text="No significant patterns detected" HorizontalAlignment="Left" VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-5%}"/>
                      <TextBlock Name="m_ctrlPatternNighttimeHighsCount" Grid.Row="7" Text="(0 Found)" HorizontalAlignment="Center"
                                 VerticalAlignment="Top" TextAlignment="Center" Foreground="Black"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
                      <TextBlock MouseEnter="m_ctrlPatternNighttimeHighsWorst_MouseEnter" Grid.Row="6" Grid.RowSpan="2"
                                 Grid.ColumnSpan="4"/>
                      <Separator Grid.Row="8" Grid.ColumnSpan="4"/>
                      <TextBlock Name="m_ctrlPatternDaytimeHighsLabel" Grid.Row="9" Text="Daytime
Highs"
                                 HorizontalAlignment="Center" TextAlignment="Center" Foreground="DarkGoldenrod"
                                 FontWeight="SemiBold"/>
                      <TextBlock Name="m_ctrlPatternDaytimeHighsWorst" Grid.Row="9" Grid.Column="2" Grid.RowSpan="2"
                                 Text="No significant patterns detected" HorizontalAlignment="Left" VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-5%}"/>
                      <TextBlock Name="m_ctrlPatternDaytimeHighsCount" Grid.Row="10" Text="(0 Found)" HorizontalAlignment="Center"
                                 VerticalAlignment="Top" TextAlignment="Center" Foreground="Black"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-10%}"/>
                      <TextBlock MouseEnter="m_ctrlPatternDaytimeHighsWorst_MouseEnter" Grid.Row="9" Grid.RowSpan="2"
                                 Grid.ColumnSpan="4"/>
                      <TextBlock Name="m_ctrlFakeInsightsSummaryText" Grid.Row="11" Grid.Column="2"
                                 Text="No significant patterns detected." HorizontalAlignment="Left" VerticalAlignment="Center"
                                 Visibility="Hidden" Height="0"
                                 FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=-5%}"/>
                      <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="11" BorderThickness="1" BorderBrush="DarkGray"
                              VerticalAlignment="Stretch" Width="1" Margin="4,0"/>
                    </Grid>
                  </DockPanel>
                </Border>
                <Border Grid.Row="1" BorderThickness="3" BorderBrush="DarkGray" CornerRadius="8" Padding="2" Margin="2"
                        Background="{Binding ElementName=m_ctrlHourlyStatsDataGrid, Path=Background}">
                  <DockPanel>
                    <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontWeight="SemiBold"
                           Content="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=PatternReport_Statistics, FallbackValue=Statistics}"
                           FontSize="{Binding ElementName=thisWindow, Path=FontSize, Converter={StaticResource RelativeFontSizeConverter}, ConverterParameter=+10%}"/>
                    <Separator DockPanel.Dock="Top"/>
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                      </Grid.RowDefinitions>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100*"/>
                      </Grid.ColumnDefinitions>
                      <TextBlock Name="m_ctrlPatternAverageGlucoseLabel" Grid.Row="0" Grid.Column="0" Text="Average Glucose"
                                 HorizontalAlignment="Center" TextAlignment="Center"/>
                      <TextBlock Name="m_ctrlPatternAverageGlucoseValue" Grid.Row="0" Grid.Column="2" Text="102 mg/dL"
                                 HorizontalAlignment="Stretch" TextAlignment="Center"/>
                      <Separator Grid.Row="1" Grid.ColumnSpan="3"/>
                      <TextBlock Name="m_ctrlPatternDaysWithGlucoseLabel" Grid.Row="2" Grid.Column="0" Text="Sensor Usage"
                                 HorizontalAlignment="Center" TextAlignment="Center"/>
                      <TextBlock Name="m_ctrlPatternDaysWithGlucose" Grid.Row="2" Grid.Column="2" Text="5 of 7 days"
                                 HorizontalAlignment="Stretch" TextAlignment="Center"
                                 ToolTip="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_PatternDaysWithSensorToolTip, FallbackValue='The number of days with sensor readings found out of the days searched.'}"/>
                      <Separator Grid.Row="3" Grid.ColumnSpan="3"/>
                      <TextBlock Name="m_ctrlPatternMetersPerDayLabel" Grid.Row="4" Grid.Column="0" Text="Calibrations / day"
                                 HorizontalAlignment="Center" TextAlignment="Center"/>
                      <TextBlock Name="m_ctrlPatternMetersPerDay" Grid.Row="4" Grid.Column="2" Text="3.7 / day"
                                 HorizontalAlignment="Stretch" TextAlignment="Center"
                                 ToolTip="{Binding ElementName=thisWindow, Path=CurrentCulture, Mode=OneWay, Converter={StaticResource ResourceDictionaryConverter}, ConverterParameter=MainWindow_PatternCalibrationUsageToolTip, FallbackValue='The total number of calibrations divided by the sensor usage.'}"/>
                      <Separator Grid.Row="5" Grid.ColumnSpan="3"/>
